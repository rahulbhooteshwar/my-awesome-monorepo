{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "lib":["es2015", "dom"],
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "declarationDir": "./lib",
    "outDir": "./lib",
    "strict": true,
    "allowUmdGlobalAccess": true,
    "esModuleInterop": true,
    "moduleResolution": "node"
  },
  "include": ["src"],
  "exclude": ["node_modules", "**/__tests__/*"]
}